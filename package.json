{
	"private": true,
	"type": "module",
	"name": "pf2ools-schema",
	"version": "0.0.1",
	"module": "./zod/index.js",
	"types": "./zod/index.d.ts",
	"dependencies": {
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"chalk": "^5.3.0",
		"commander": "^11.1.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"json-refs": "^3.0.15",
		"json-schema-to-zod": "^2.0.12",
		"prettier": "^3.1.0"
	},
	"bin": "scripts/test-data.js",
	"scripts": {
		"clean": "npx prettier . --write --cache --log-level warn",
		"test": "node ./scripts/test-schema.js -rae ./schema",
		"zod": "npm run build-zod && npm run zod-types",
		"build-zod": "node ./scripts/build-zod.js",
		"zod-types": "npx -p typescript tsc zod/index.ts --declaration --allowJs --lib ESNext --module nodenext --strict true --alwaysStrict true --strictNullChecks true --outDir zod/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Pf2ools/pf2ools-schema.git"
	},
	"author": "The Pf2ools project",
	"description": "The Pf2ools ecosystem's schema for representing Pathfinder 2nd Edition game data as JSON.",
	"keywords": [
		"pathfinder",
		"pathfinder2e",
		"rpg",
		"ttrpg",
		"pf2ools",
		"schema"
	],
	"license": "MIT",
	"homepage": "https://github.com/Pf2ools/pf2ools-schema#README",
	"bugs": {
		"url": "https://github.com/Pf2ools/pf2ools-schema/issues"
	}
}
